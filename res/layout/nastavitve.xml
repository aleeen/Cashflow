<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:background="#87cefa" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout4" android:layout_height="wrap_content">
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Prikaz:" android:textColor="@color/crno_besedilo" android:textSize="9pt"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent">
        <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/button1" android:background="@drawable/button" android:text="Zadnjih 30 dni" android:textStyle="bold"></Button>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="match_parent">
        <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/button2" android:background="@drawable/button" android:text="Ves čas" android:textStyle="bold"></Button>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:layout_width="match_parent">
        <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/button3" android:background="@drawable/button" android:text="Izberi mesec" android:textStyle="bold"></Button>
    </LinearLayout>
  
</LinearLayout>
